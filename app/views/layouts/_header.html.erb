<span class="navbar-brand" href="/">flatiron<strong>store</strong></span>
<ul class="nav nav-pills">
  <li class="nav-item"><%= link_to "Store Home", store_path, class: 'nav-link' %></li>
  <li class="nav-item"><%= link_to('Cart', cart_path(@current_cart), class: 'nav-link') if !!@current_cart %></li>

  <% if user_signed_in? %>
