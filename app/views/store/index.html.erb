<div class="row">
  <% @categories.each do |category| %>
    <div class="col-sm-6">
    <%= link_to category.title, category_path(category) %>
    </div>
  <% end %>
</div>

<hr>

<div class="row">
  <% @items.each do |item| %>
    <div class="col-sm-4">
      <p><%= link_to item.title, item %><br /> | <%= number_to_currency(item.price/100) %> | <%= add_to_cart_button(item) %></p>
    </div>
  <% end %>
</div>
